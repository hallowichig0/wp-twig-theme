{#
 *
 * Template part for displaying posts
 *
 * @link https://codex.wordpress.org/Template_Hierarchy
 *
 * @package Bootstrap4
 *
#}
<article id="post-{{ post.ID }}" class="{{ post.class }}">
    {% if post.thumbnail %}
        <!-- Preview Image -->
        <img src="{{ post.thumbnail.src('post-thumbnails') }}" srcset="{{ post.thumbnail.srcset }}" sizes="{{ post.thumbnail.img_sizes }}" class="img-fuild rounded wp-post-image" loading="lazy" />
    {% endif %}

    <hr>

    <!-- Date/Time -->
    <p>
        Posted on {{ post.date|date('F d, Y') }} at {{ post.date|date('h:m A') }}
    </p>

    <hr>

    <!-- Post Content -->
    <div class="entry-content">
        {{ post.content }}
    </div>
    <hr>
    <nav class="navigation post-navigation" role="navigation" aria-label="Posts">
        <div class="nav-links">
            {% if post.prev %}
                <div class="nav-previous">
                    <a href="{{ post.prev.link }}" rel="prev">{{ post.prev.title }}</a>
                </div>
            {% endif %}
            {% if post.next %}
                <div class="nav-next">
                    <a href="{{ post.next.link }}" rel="next">{{ post.next.title }}</a>
                </div>
            {% endif %}
        </div>
    </nav>

</article>
